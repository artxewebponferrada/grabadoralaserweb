---
import { SEO } from 'astro-seo';
import data from '../data/data.json';

const { title, description, noindex = false, nofollow = false } = Astro.props;

const defaultTitle = data.site.title;
const defaultDescription = data.site.description;

const metaTitle = title ? `${title} | ${defaultTitle}` : defaultTitle;
const metaDescription = description || defaultDescription;
---

<SEO
  title={metaTitle}
  description={metaDescription}
  noindex={noindex}
  nofollow={nofollow}
  openGraph={{
    basic: {
      title: metaTitle,
      type: 'website',
      image: `${data.site.baseUrl}/og-image.png`,
    },
  }}
  twitter={{
    creator: '@migrabadoralaser',
  }}
  extend={{
    meta: [
      { name: 'viewport', content: 'width=device-width, initial-scale=1' },
      { name: 'generator', content: Astro.generator },
    ],
  }}
/>