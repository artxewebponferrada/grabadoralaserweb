---
interface Props {
  title: string;
  questions: {
    question: string;
    answer: string;
  }[];
}

const { title, questions } = Astro.props;
---

<section class="bg-white rounded-2xl p-8 shadow-sm mb-8">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">{title}</h2>
  <div class="space-y-4">
    {questions.map((faq, index) => (
      <details 
        class="group bg-gray-50 rounded-xl" 
        {...index === 0 && { open: true }}
      >
        <summary class="flex justify-between items-center cursor-pointer p-6">
          <h3 class="text-lg font-medium text-gray-900">{faq.question}</h3>
          <span class="ml-6 flex-shrink-0">
            <svg
              class="w-6 h-6 text-gray-400 group-open:rotate-180 transition-transform"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M19 9l-7 7-7-7" 
              />
            </svg>
          </span>
        </summary>
        <div class="px-6 pb-6">
          <p class="text-gray-600">{faq.answer}</p>
        </div>
      </details>
    ))}
  </div>
</section>