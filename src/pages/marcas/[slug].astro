---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
import data from '../../data';
import brands from '../../data/brands.json';

export async function getStaticPaths() {
  const now = new Date();
  
  const brandsWithProducts = brands.brands.filter(brand =>
    data.products.some(
      product =>
        product.brand === brand.id &&
        new Date(product.publishDate) <= now
    )
  );
  
  return brandsWithProducts.map((brand) => ({
    params: { slug: brand.slug },
    props: { brand },
  }));
}

const { brand } = Astro.props;

// Filter products by brand and publication date
const now = new Date();
const products = data.products
  .filter(
    (product) =>
      product.brand === brand.id &&
      new Date(product.publishDate) <= now
  )
  .sort((a, b) => new Date(b.publishDate).getTime() - new Date(a.publishDate).getTime());
---

<Layout
  title={brand.name}
  description={brand.description}
>
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <!-- Brand Header -->
    <header class="text-center mb-16">
      <figure class="w-64 h-64 mx-auto mb-8 rounded-2xl overflow-hidden bg-gray-50 p-6">
        <img
          src={brand.logo}
          alt={`${brand.name} logo`}
          class="w-full h-full object-contain"
          style="border-radius: 50%"
        />
      </figure>
      <h1 class="text-4xl font-extrabold text-gray-900 mb-4">Opiniones sobre la marca {brand.name}</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
        {brand.description}
      </p>
      <a
        href={brand.website}
        class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-full text-white bg-primary-600 hover:bg-primary-700 transition-colors"
        target="_blank"
        rel="noopener noreferrer"
      >
        Visitar sitio web oficial
      </a>
    </header>

    <!-- Brand Reviews Section -->
    {brand.brandReviews && (
      <section class="bg-white rounded-2xl p-8 mb-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Opiniones sobre {brand.name}</h2>
        <p class="text-gray-600 mb-8">{brand.brandReviews.summary}</p>
        
        <div class="grid gap-6">
          {brand.brandReviews.reviews.map((review) => (
            <article class="bg-gray-50 rounded-xl p-6">
              <div class="flex gap-0.5 mb-3">
                {Array.from({ length: 5 }, (_, i) => i < review.rating).map((filled) => (
                  <svg
                    class={`w-4 h-4 ${filled ? 'text-yellow-400' : 'text-gray-200'}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <blockquote class="text-gray-600 mb-3">{review.content}</blockquote>
              <footer>
                <cite class="text-sm font-medium text-gray-900 not-italic">{review.name}</cite>
              </footer>
            </article>
          ))}
        </div>
      </section>
    )}

      <header class="text-center mb-12">
        <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          Los mejores grabadores láser {brand.name}
        </h2>
        <p class="mt-4 text-xl text-gray-600">
          Descubre nuestra selección de las mejores reviews de las grabadores láser de la marca {brand.name}
        </p>
      </header>

    <!-- Products Grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 mb-16">
      {products.map((product) => (
        <ProductCard {...product} />
      ))}
    </div>

    <!-- Two Column Section -->
    {brand.twoColumnSection && (
      <section class="bg-white rounded-2xl p-8 mb-16">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">{brand.twoColumnSection.title}</h2>
            <div class="prose max-w-none text-gray-600">
              {brand.twoColumnSection.content}
            </div>
          </div>
          <figure class="aspect-w-16 aspect-h-9 bg-gray-50 rounded-xl overflow-hidden">
            <img
              src={brand.twoColumnSection.image}
              alt={brand.twoColumnSection.imageAlt}
              class="w-full h-full object-cover"
            />
          </figure>
        </div>
      </section>
    )}

    <!-- Brand Information -->
    <section class="bg-white rounded-2xl p-8 shadow-soft mb-16">
      <div class="prose max-w-none">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Sobre {brand.name}</h2>
        <div class="text-gray-600 mb-8">
          {brand.longDescription}
        </div>

        <h3 class="text-xl font-bold text-gray-900 mb-4">Características destacadas</h3>
        <ul class="space-y-3">
          {brand.features.map((feature) => (
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 mr-3 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              {feature}
            </li>
          ))}
        </ul>
      </div>
    </section>

    <!-- Contenido de la marca -->
    <section class="bg-white rounded-2xl p-8 shadow-soft mb-16">
      <div class="prose max-w-none">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">¿Merece la pena la marca {brand.name}?</h2>
        <div class="text-gray-600 mb-8">
          {brand.contentBrand}
        </div>
      </div>
    </section>

    <section class="bg-white rounded-2xl p-8 mb-16">
        <div class="mt-8 space-y-4">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Preguntas frecuentes sobre la marca {brand.name}</h3>
          {brand.faqs.map((faq, index) => (
            <details class="group bg-gray-50 rounded-xl" {...index === 0 && { open: true }}>
              <summary class="flex justify-between items-center cursor-pointer p-6">
                <h4 class="text-lg font-medium text-gray-900">{faq.question}</h4>
                <span class="ml-6 flex-shrink-0">
                  <svg
                    class="w-6 h-6 text-gray-400 group-open:rotate-180 transition-transform"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </span>
              </summary>
              <div class="px-6 pb-6">
                <p class="text-gray-600">{faq.answer}</p>
              </div>
            </details>
          ))}
        </div>
    </section>
    
  </div>
</Layout>
